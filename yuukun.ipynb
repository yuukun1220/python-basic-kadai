      "source": [
        "# 台形の面積を求めるプログラム\n",
        "\n",
        "# 上辺、下辺、高さの入力\n",
        "upper_base = 10  # cm\n",
        "lower_base = 20  # cm\n",
        "height = 5  # cm\n",
        "\n",
        "# 公式：台形の面積 =（上辺＋下辺）× 高さ ÷ 2\n",
        "area = (upper_base + lower_base) * height / 2\n",
        "\n",
        "# 結果の出力\n",
        "print(\"台形の面積:\", area, \"cm^2\")\n",
        "print(\"台形の面積: \" + str(area) + \" cm^2\")"
      ],
